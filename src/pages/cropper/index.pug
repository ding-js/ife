extends /layout/main
block main
  main
    section
      form
        #set-cropper.form-group
          input(placeholder="宽",type="number",min="0",max="100",name="width")
          input(placeholder="高",type="number",min="0",max="100",name="height")
        .form-group
          button#set-btn(type="button") 修改大小
          button#crop-btn(type="button") 裁剪
        .form-group
          label.pick-file#pick-file(for="file") 点击选择要裁剪的图片
          input#file(type="file",accept="image/jpeg,image/x-icon,image/png")
    section
      #cropper.cropper
    section
      #preview.preview
    section
      img#crop-image
